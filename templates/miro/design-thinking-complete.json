      "Prepare physical materials if needed"
    ],
    "phaseTiming": {
      "empathize": {
        "duration": "90 minutes",
        "activities": [
          "Review user research (20min)",
          "Create personas (25min)",
          "Build empathy map (30min)",
          "Extract insights (15min)"
        ]
      },
      "define": {
        "duration": "60 minutes", 
        "activities": [
          "Craft point of view (20min)",
          "Generate HMW questions (25min)",
          "Define success metrics (15min)"
        ]
      },
      "ideate": {
        "duration": "90 minutes",
        "activities": [
          "Crazy 8s exercise (15min)",
          "Open brainstorming (45min)",
          "Idea clustering & voting (30min)"
        ]
      },
      "prototype": {
        "duration": "120 minutes",
        "activities": [
          "Choose prototype type (10min)",
          "Build prototypes (80min)",
          "Document assumptions (30min)"
        ]
      },
      "test": {
        "duration": "60 minutes",
        "activities": [
          "Plan user tests (15min)",
          "Conduct quick tests (30min)",
          "Synthesize feedback (15min)"
        ]
      }
    },
    "energizers": [
      "Human spectrum voting",
      "Quick sketch introductions",
      "Two truths and a lie",
      "Rapid fire word association"
    ],
    "troubleshooting": {
      "lowParticipation": "Use silent brainstorming and round-robin sharing",
      "tooManyIdeas": "Time-box activities and use dot voting",
      "offTopic": "Use a parking lot for unrelated ideas",
      "criticismEarly": "Remind of brainstorming rules, defer judgment"
    }
  },
  "aiPrompts": {
    "userPersonaGeneration": "Generate 2-3 realistic user personas for {problemDomain} in {industry}. Include demographics, goals, pain points, and behavioral patterns. Each persona should be specific and based on research insights.",
    "empathyMapContent": "Create empathy map content for {userPersona} trying to {userGoal}. Generate 4-6 authentic insights for each quadrant: thinks & feels, sees, says & does, pains, and gains.",
    "hmwQuestions": "Generate 8-10 'How Might We' questions based on the problem statement: {problemStatement}. Questions should be optimistic, broad enough for creative solutions, but narrow enough to be actionable.",
    "solutionIdeas": "Generate 15-20 creative solution ideas for: {hmwQuestion}. Include both obvious and unconventional approaches. Focus on user value and feasibility.",
    "prototypeGuidance": "Suggest the best prototyping approach for {solutionConcept} considering {constraints} and {timeline}. Include specific deliverables and testing methods."
  },
  "qualityChecks": [
    "User insights are specific and actionable",
    "Problem statement is clear and user-focused",
    "Ideas are diverse and creative",
    "Prototype assumptions are documented", 
    "Test feedback is captured and analyzed",
    "Next steps have clear owners and deadlines"
  ]
